        transaction.update_cache = True
        transaction.source_to_update = 'x2go-ubuntu-stable-'+codename+'.list'

    if transaction.action == 'install':
        transaction.install_packages()
    elif transaction.action == 'remove':
        transaction.remove_packages()
    elif transaction.action == 'upgrade':
        transaction.upgrade_packages()
    else:
        print('The requested action is unknown')


class WelcomeConfig(object):
    """ Manages Welcome configuration """
    def __init__(self):
        # store our base architecture
        self.os_version = platform.dist()[1]
        self.os_codename = platform.dist()[2]
        self.os_title = 'Ubuntu MATE ' + self.os_version
        self._arch = systemstate.arch

        # store full path to our binary
        self._welcome_bin_path = os.path.abspath(inspect.getfile(inspect.currentframe()))

        # directory for the configuration
        self._config_dir = os.path.expanduser('~/.config/ubuntu-mate/welcome/')

        # autostart directory
        self._autostart_dir = os.path.expanduser('~/.config/autostart/')

        # full path to the autostart symlink
        self._autostart_path = os.path.expanduser(os.path.join(self._autostart_dir, 'ubuntu-mate-welcome.desktop'))

        # ensure our config and autostart directories exists
        for _dir in [self._config_dir, self._autostart_dir]:
            if not os.path.exists(_dir):
                try:
                    os.makedirs(_dir)
                except OSError as err:
                    print(err)
                    pass

        # does autostart symlink exist
        self._autostart = os.path.exists(self._autostart_path)

    @property
    def autostart(self):
        return self._autostart

    @autostart.setter
    def autostart(self, state):
        if state and not os.path.exists(self._autostart_path):
            # create the autostart symlink
            try:
                os.symlink('/usr/share/applications/ubuntu-mate-welcome.desktop', self._autostart_path)
            except OSError as err:
                print(err)
                pass
        elif not state and os.path.exists(self._autostart_path):
            # remove the autostart symlink
            try:
                os.unlink(self._autostart_path)
            except OSError as err:
                print(err)
                pass

        # determine autostart state based on absence of the disable file
        self._autostart = os.path.exists(self._autostart_path)


class AppView(WebKit.WebView):
    def __init__(self):
        WebKit.WebView.__init__(self)

        self._config = WelcomeConfig()
        self._apt_cache = apt.Cache()
        self.connect('load-finished', self._load_finished_cb)
        self.connect('navigation-policy-decision-requested', self._nav_request_policy_decision_cb)
        self.l_uri = None

        # disable right-click context menu as it isn't needed.
        self.props.settings.props.enable_default_context_menu = False

    def _push_config(self):
        ### Global - On all pages ###
        self.execute_script("$('#os_title').html('%s')" % self._config.os_title)
        self.execute_script("$('#os_version').html('%s')" % self._config.os_version)
        self.execute_script("$('#autostart').toggleClass('fa-check-square', %s).toggleClass('fa-square', %s)" % (json.dumps(self._config.autostart), json.dumps(not self._config.autostart)))

        # If this is a Live session (booted from ISO) show the
        # 'Install OS' button, if running on an installed system show
        # the 'Install Software' button.
        if systemstate.session_type == 'live':
            self.execute_script("$('#install').show();")
            self.execute_script("$('#software').hide();")
            self.execute_script("$('.live-session').hide();")
            self.execute_script("$('.live-session-only').show();")
        else:
            self.execute_script("$('#install').hide();")
            self.execute_script("$('#software').show();")
            self.execute_script("$('.live-session').show();")
            self.execute_script("$('.live-session-only').hide();")

        # If we find a Raspberry Pi 2 kernel, we're running on a Pi 2.
        if systemstate.session_type == 'pi':
            self.execute_script("$('.rpi-only').show();")
        else:
            self.execute_script("$('.rpi-only').hide();")

        # Display warnings if the user is not connected to the internet.
        if systemstate.is_online:
            self.execute_script("$('.offline').hide();")
            self.execute_script("$('.online').show();")
        else:
            self.execute_script("$('.offline').show();")
            self.execute_script("$('.online').hide();")

        ### Main Menu ###
        if self.current_page == 'index.html':
            if systemstate.session_type == 'guest':
                # Disable features that are unavailable to guests.
                self.execute_script("$('#gettingstarted').hide();")
                self.execute_script("$('#software').hide();")
                self.execute_script("$('#introduction').addClass('btn-success');")
                self.execute_script("$('#community').addClass('btn-success');")

        ### Splash ###
        if self.current_page == 'splash.html':
            # Determine which screen to show after the splash screen.
            if systemstate.session_type == 'live':
                self.execute_script('var splashNextPage = "hellolive"')
            elif systemstate.session_type == 'guest':
                self.execute_script('var splashNextPage = "helloguest"')
            else:
                self.execute_script('var splashNextPage = "index"')

        ### Chat Page ###
        if self.current_page == 'chatroom.html':
            if self._apt_cache['hexchat'].is_installed:
                self.execute_script("$('.hexchat').show();")
                self.execute_script("$('.webchat').hide();")
            else:
                self.execute_script("$('.hexchat').hide();")
                self.execute_script("$('.webchat').show();")

        ### Getting Started Page ###
        if self.current_page == 'gettingstarted.html':
            # Display information tailored to graphics vendor (Getting Started / Drivers)
            self.execute_script('var graphicsVendor = "' + systemstate.graphics_vendor + '";')
            self.execute_script('var graphicsGrep = "' + systemstate.graphics_grep + '";')
            self.execute_script('$("#boot-mode").html("' + systemstate.boot_mode + '")')

            # Display system information if successfully cached.
            if systemstate.system_info_cached:
                systemstate.append_system_info(self)

            # Update any applications featured on these pages.
            dynamicapps.update_app_statuses(self)

        ### Software Page ###
        if self.current_page == 'software.html':
            # If loading a minimal "Get More Software" only page.
            if arg.jump_software_page:
                self.execute_script('$("#menu-button").hide()')
                self.execute_script('$("#footer-left").hide()')
                self.execute_script('$("#navigation-title").html("<span id=\'navigation-sub-title\'>Our Picks</span>")')
                self.execute_script('$("#navigation-sub-title").css("color","#DED9CB")')

            # Dynamically load application lists.
            dynamicapps.populate_categories(self)
            dynamicapps.update_app_statuses(self)
            dynamicapps.populate_featured_apps(self)


    def _load_finished_cb(self, view, frame):
        self._push_config()

    def _nav_request_policy_decision_cb(self, view, frame, net_req, nav_act, pol_dec):
        uri = net_req.get_uri()
        self.current_page = uri.rsplit('/', 1)[1]

        try:
            if uri.index('#') > 0:
                uri = uri[:uri.index('#')]
        except ValueError:
            pass

        if uri == self.l_uri:
            pol_dec.use()
            return True

        if uri.startswith('cmd://'):
            self._do_command(uri)
            return True

        self.l_uri = uri

        page = urllib.request.urlopen(uri)
        frame.load_string(page.read().decode(), "text/html", "iso-8859-15", page.geturl())
        pol_dec.ignore()
        return True

    def _do_command(self, uri):
        if uri.startswith('cmd://'):
            uri = uri[6:]

        if uri.startswith('apt-install?'):
            process_packages(uri[12:], 'install')
            self._apt_cache.close()
            self._apt_cache = apt.Cache()
            self._push_config()
            dynamicapps.update_app_statuses(self);
        elif uri.startswith('apt-remove?'):
            process_packages(uri[11:], 'remove')
            self._apt_cache.close()
            self._apt_cache = apt.Cache()
            self._push_config()
            dynamicapps.update_app_statuses(self);
        elif uri.startswith('apt-upgrade?'):
            process_packages(uri[12:], 'upgrade')
            self._apt_cache.close()
            self._apt_cache = apt.Cache()
            self._push_config()
            dynamicapps.update_app_statuses(self);
        elif uri == 'apt-update':
            update_repos()
            self._apt_cache.close()
            self._apt_cache = apt.Cache()
            self._push_config()
        elif uri == 'fix-incomplete-install':
            fix_incomplete_install()
            self._apt_cache.close()
            self._apt_cache = apt.Cache()
            self._push_config()
        elif uri == 'fix-broken-depends':
            fix_broken_depends()
            self._apt_cache.close()
            self._apt_cache = apt.Cache()
            self._push_config()
        elif uri == 'autostart':
            self._config.autostart ^= True
            self._push_config()
        elif uri == 'install':
            subprocess.Popen(['ubiquity','gtk_ui'])
        elif uri == 'backup':
            subprocess.Popen(['deja-dup-preferences'])
        elif uri == 'chatroom':
            subprocess.Popen(['hexchat','IRC://irc.freenode.net/ubuntu-mate'])
        elif uri == 'control':
            subprocess.Popen(['mate-control-center'])
        elif uri == 'drivers':
            subprocess.Popen(['software-properties-gtk','--open-tab=4'])
        elif uri == 'firewall':
            subprocess.Popen(['gufw'])
        elif uri == 'language':
            subprocess.Popen(['gnome-language-selector'])
        elif uri == 'users':
            subprocess.Popen(['users-admin'])
        elif uri == 'quit':
            Gtk.main_quit()
        elif uri == 'tweak':
            subprocess.Popen(['mate-tweak'])
        elif uri == 'update':
            subprocess.Popen(['update-manager'])
        elif uri == 'printers':
            subprocess.Popen(['system-config-printer'])
        elif uri == 'gparted':
            subprocess.Popen(['gparted-pkexec'])
        elif uri == 'sysmonitor':
            subprocess.Popen(['mate-system-monitor'])
        elif uri == 'hardinfo':
            subprocess.Popen(['hardinfo'])
        elif uri.startswith('run?'):
            subprocess.Popen([uri[4:]])
        elif uri.startswith('link?'):
            webbrowser.open_new_tab(uri[5:])
        elif uri == 'checkInternetConnection':
            systemstate.check_internet_connection()
            if systemstate.is_online:
                self.execute_script("$('.offline').hide();")
                self.execute_script("$('.online').show();")
            else:
                self.execute_script("$('.offline').show();")
                self.execute_script("$('.online').hide();")
        elif uri == 'get-spec-ram':
            systemstate.append_system_info(self, True)
        elif uri.startswith('launchid?'):
            appid = uri[9:]
            dynamicapps.launch_app(appid)
        else:
            print('Unknown command: %s' % uri)

class WelcomeApp(object):
    def __init__(self):
        # establish our location
        self._location = os.path.dirname( os.path.abspath(inspect.getfile(inspect.currentframe())) )

        # check for relative path
        if( os.path.exists( os.path.join(self._location, 'data/' ) ) ):
            print('[Debug] Using relative path for data source. Non-production testing.')
            self._data_path = os.path.join(self._location, 'data/')
        elif( os.path.exists('/usr/share/ubuntu-mate-welcome/') ):
            print('Using /usr/share/ubuntu-mate-welcome/ path.')
            self._data_path = '/usr/share/ubuntu-mate-welcome/'
        else:
            print('Unable to source the ubuntu-mate-welcome data directory.')
            sys.exit(1)

        self._build_app()

    def _build_app(self):

        # Slightly different attributes if "--software-only" is activated.
        if arg.jump_software_page:
            title = "Get More Software"
            width = 900
            height = 600
            load_file = 'software.html'
        else:
            title = "Welcome"
            width = 800
            height = 552
            load_file = 'splash.html'

        # build window
        w = Gtk.Window()
        w.set_position(Gtk.WindowPosition.CENTER)
        w.set_wmclass('Ubuntu MATE Welcome', 'Ubuntu MATE Welcome')
        w.set_title(title)

        # http://askubuntu.com/questions/153549/how-to-detect-a-computers-physical-screen-size-in-gtk
        s = Gdk.Screen.get_default()
        if s.get_height() <= 600:
            w.set_size_request(768, 528)
        else:
            w.set_size_request(width, height)

        icon_dir = os.path.join(self._data_path, 'img', 'welcome', 'ubuntu-mate-icon.svg')
        w.set_icon_from_file(icon_dir)

        # build webkit container
        mv = AppView()

        # load our index file
        file = os.path.abspath(os.path.join(self._data_path, load_file))

        uri = 'file://' + urllib.request.pathname2url(file)
        mv.open(uri)

        # build scrolled window widget and add our appview container
        sw = Gtk.ScrolledWindow()
        sw.set_policy(Gtk.PolicyType.NEVER, Gtk.PolicyType.AUTOMATIC)
        sw.add(mv)

        # build an autoexpanding box and add our scrolled window
        b = Gtk.VBox(homogeneous=False, spacing=0)
        b.pack_start(sw, expand=True, fill=True, padding=0)

        # add the box to the parent window and show
        w.add(b)
        w.connect('delete-event', self.close)
        w.show_all()

        self._window = w
        self._appView = mv

    def run(self):
        signal.signal(signal.SIGINT, signal.SIG_DFL)
        Gtk.main()

    def close(self, p1, p2):
        Gtk.main_quit(p1, p2);

class SystemState(object):
    def __init__(self):
        # Set initial variables
        self.system_info_cached = False
        self.is_online = False
        self.user_name = getuser()

        # Get current architecture of system.
        # Outputs 'i386', 'amd64', etc - Based on packages instead of kernel (eg. i686, x86_64).
        self.arch = str(subprocess.Popen(['dpkg','--print-architecture'], stdout=subprocess.PIPE).communicate()[0]).strip('\\nb\'')

        # Determine which type of session we are in.
        if os.path.exists('/usr/share/glib-2.0/schemas/zubuntu-mate-live.gschema.override'):
            self.session_type = 'live'
        elif self.user_name[:6] == 'guest-':
            self.session_type = 'guest'
        elif os.path.isfile(os.path.join('/','boot/','kernel7.img')):
            self.session_type = 'pi'
        else:
            self.session_type = 'normal'

        # To inform the user if they are running in BIOS or UEFI mode.
        if os.path.exists("/sys/firmware/efi"):
            self.boot_mode = 'UEFI'
        elif self.session_type == 'pi':
            self.boot_mode = 'Raspberry Pi 2'
        else:
            self.boot_mode = 'BIOS'

        # Create, then spawn threads
        thread1 = Thread(target=self.check_internet_connection)
        thread2 = Thread(target=self.detect_graphics)
        thread3 = Thread(target=self.get_system_info)
        thread1.start()
        thread2.start()
        thread3.start()

    def check_internet_connection(self):
        print('[Network Test] Checking for internet connectivity... ')
        url = "http://archive.ubuntu.com/"

        if arg.simulate_no_connection:
            print('[Network Test] Simulation argument override. Retrying will reset this.')
            arg.simulate_no_connection = False
            return

        try:
            response = urllib.request.urlopen(url, timeout=2).read().decode('utf-8')
        except socket.timeout:
            print("[Network Test] -- Socket timed out to URL {0}", format(url))
            self.is_online = False
        except:
            print("[Network Test] -- Could not establish a connection to '{0}'. ".format(url))
            self.is_online = False
        else:
            print("[Network Test] Successfully pinged '{0}' ".format(url))
            self.is_online = True

    def detect_graphics(self):
        # If we're the Raspberry Pi 2, there is nothing to output.
        if self.session_type == 'pi':
            self.graphics_grep = 'Raspberry Pi 2'
            self.graphics_vendor = 'Raspberry Pi 2'
            return

        # TODO: Support dual graphic cards.
        print('[Graphics] Detecting graphics vendor... ')
        try:
            output = subprocess.Popen('lspci | grep VGA', stdout=subprocess.PIPE, shell='True').communicate()[0]
            output = output.decode(encoding='UTF-8')
        except:
            # When 'lspci' does not find a VGA controller (this is the case for the RPi 2)
            print("[Graphics] Couldn't detect a VGA Controller on this system.")
            output = 'Unknown'

        # Scan for and set known brand name.
        if output.find('NVIDIA') != -1:
            self.graphics_vendor = 'NVIDIA'
        elif output.find('AMD') != -1:
            self.graphics_vendor = 'AMD'
        elif output.find('Intel') != -1:
            self.graphics_vendor = 'Intel'
        elif output.find('VirtualBox') != -1:
            self.graphics_vendor = 'VirtualBox'
        else:
            self.graphics_vendor = 'Unknown'

        self.graphics_grep = repr(output)
        self.graphics_grep = self.graphics_grep.split("controller: ",1)[1]
        self.graphics_grep = self.graphics_grep.split("\\n",1)[0]
        print("[Graphics] Detected: {0}".format(self.graphics_grep))

    def get_system_info(self):
        print('[System Info] Caching system info... ')
        try:
            # Use 'inxi' to retrieve the system information.
            self.specs_raw_system = str(subprocess.Popen('inxi -S', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_machine = str(subprocess.Popen('inxi -M', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_cpu = str(subprocess.Popen('inxi -C', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_memory = str(subprocess.Popen('free | grep \'Mem:\' | awk \'{print $2}\'', stdout=subprocess.PIPE, shell='True').communicate()[0]).strip("b'\\n")
            self.specs_raw_drivelist = str(subprocess.Popen('inxi -D', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_partitions = str(subprocess.Popen('inxi -p', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_raid = str(subprocess.Popen('inxi -R', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_optical = str(subprocess.Popen('inxi -d', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_optical = 'Optical:  ' + '<b>dev:</b> ' + self.specs_raw_optical.split('Optical:')[1]
            self.specs_raw_graphics = str(subprocess.Popen('inxi -G', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_audio = str(subprocess.Popen('inxi -A', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_network = str(subprocess.Popen('inxi -i', stdout=subprocess.PIPE, shell='True').communicate()[0])
            self.specs_raw_sensors = str(subprocess.Popen('inxi -s', stdout=subprocess.PIPE, shell='True').communicate()[0])

            # If commands were successfully executed.
            self.system_info_cached = True
            print("[System Info] Successfully cached system information.")

        except:
            print("[System Info] There was a problem running 'inxi'. Is this program no longer installed?")
            return

    def append_system_info(self, webkit, ram_only=False):

        # Cleans up raw data from the command.
        def append_raw(data, label, target_element, existing=False):

          try:
            ## Only show the string after the "System:", "Network:" bit.
            output = data.split(label+':')[1]

            ## Clear out terminal colour codes.
            output = output.replace(' \\x1b[1;34m','<b>')
            output = output.replace('\\x1b[0;37m','</b>')
            output = output.replace(' </b>','')
            output = output.replace(' \\x1b','<br>')
            output = output.replace('[0;37m','')
            output = output.replace('[1;34m','')
            output = output.replace('\\x1b','')
            output = output.replace('[0m\'','')
            output = output.replace('\\n','\n')
            output = output.replace('<b>','<br><b>')
            output = output.split('<br>', 1)[1]
            output = output.strip('          ')

            ## Replace some strings that inxi outputs with something tidier.
            output = output.replace('<br><b>Desktop:</b> N/A','')
            output = output.replace('Mobo:','Motherboard:')
            output = output.replace('model:','Model:')
            output = output.replace('<b>v:','<b>Version:')
            output = output.replace('Bios:','BIOS Vendor:')
            output = output.replace('date:','Date:')
            output = output.replace('cache:','Cache:')
            output = output.replace('clock speeds:','<br><u>Current Clock Speeds:</u>')
            output = output.replace('max:','Max:')
            output = output.replace('<br><b>ID-','<br><br><b>ID-')
            output = output.replace('<br><b>Card-','<br><br><b>Card-')
            output = output.replace('<br><b>Device-','<br><br><b>Device-')
            output = output.replace('size:','Size:')
            output = output.replace('used:','Used:')
            output = output.replace('fs:','File System:')
            output = output.replace('dev:','Device Block:')
            output = output.replace('Features:','<br><b><u>Features:</u></b><br>')
            output = output.replace('features:','Features:')
            output = output.replace('driver:','Drivers:')
            output = output.replace('drivers:','Drivers:')
            output = output.replace('state:','State:')
            output = output.replace('speed:','Speed:')
            output = output.replace('dev-links:','Device Block Links:')
            output = output.replace('multissession:','Multi-Session Support:')
            output = output.replace('audio:','Audio Support:')
            output = output.replace('dvd:','DVD Support:')
            output = output.replace('rw:','Read/Write Support:')
            output = output.replace('duplex:','Duplex:')
            output = output.replace('mac:','MAC Address:')
            output = output.replace('ip:','LAN IP Address:')
            output = output.replace('IF:','Interface:')
            output = output.replace('WAN IP:','Public IP Address:')
            output = output.replace('mobo:','Motherboard:')
            output = output.replace('gpu:','GPU:')
            output = output.replace('cpu:','<br>CPU:')
            output = output.replace('(in rpm)','(in RPM)')
            output = output.replace('devices:','Devices:')
            output = output.replace('<b>Device Block:</b> No optical drives detected.','No optical drives detected.')

            # Write to target element, but only clear if no data is appended here yet.
            if not existing:
                # No information exists in this element yet.
                webkit.execute_script('$("#spec-' + target_element + '").html("")')
            else:
                # Additional commands provide more data for here, add a gap.
                webkit.execute_script('$("#spec-' + target_element + '").append("<br><br>")')

            for line in output.split('\n'):
                webkit.execute_script('$("#spec-' + target_element + '").append("' + line + '")')

          except:
              print('[System Info] No suitable data to process for "' + label + '".')
              if not existing:
                  webkit.execute_script('$("#spec-' + target_element + '").html("No information available.")')

        # If authenticating to retrieve root privileged information about the RAM.
        if ram_only:
            print('[System Info] Authenticating to retrieve RAM details...')
            ram_output = str(subprocess.Popen('pkexec inxi -m', stdout=subprocess.PIPE, shell='True').communicate()[0])
            append_raw(ram_output, 'Memory', 'ram-advanced')
            return

        # Process each category of system information.
        append_raw(self.specs_raw_system, 'System', 'system')
        append_raw(self.specs_raw_machine, 'Machine', 'machine')
        append_raw(self.specs_raw_cpu, 'CPU', 'cpu')
        append_raw(self.specs_raw_drivelist, 'Drives', 'storage')
        append_raw(self.specs_raw_partitions, 'Partition', 'storage', True)
        append_raw(self.specs_raw_raid, 'RAID', 'storage', True)
        append_raw(self.specs_raw_optical, 'Optical', 'optical')
        append_raw(self.specs_raw_graphics, 'Graphics', 'graphics')
        append_raw(self.specs_raw_audio, 'Audio', 'audio')
        append_raw(self.specs_raw_network, 'Network', 'network')
        append_raw(self.specs_raw_sensors, 'Sensors', 'sensors')

        # Add details about UEFI/BIOS boot mode.
        webkit.execute_script('$("#spec-system").append("<br><b>Boot Mode:</b> ' + self.boot_mode + '")')

        # Details for RAM require root privilages, show total capacity instead.
        webkit.execute_script('$("#spec-ram").html("")')
        webkit.execute_script('$("#spec-ram").append("<b>Total:</b> ' + str(round(int(self.specs_raw_memory)/1024/1024,1)) + ' GiB (' + str(round(int(self.specs_raw_memory)/1024)) + ' MiB)")')
        webkit.execute_script('$("#spec-ram").append("<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;' + str(round(int(self.specs_raw_memory)/1000/1000,1)) + ' GB &nbsp;(' + str(round(int(self.specs_raw_memory)/1000)) + ' MB)")')

class DynamicApps(object):
    def __init__(self):
        # Load JSON Index into Memory
        self.reload_index()

        # All categories in JSON and application.
        self.allcategories = ['Accessories', 'Education', 'Games', 'Graphics', 'Internet', 'Office', 'Programming', 'Media', 'SysTools', 'UnivAccess', 'Servers', 'MoreApps']

    ###### JSON Index Structure
    #
    # {
    #   "Category Name" {
    #       "myapp" {                                          - Unique simple identifier, apps are sorted A-Z by this. Hyphens preferred.
    #           "name": "Template",                            - Name of application.
    #           "img": "template",                             - Image name, excluding ".png" at end.
    #           "main-package": "template",                    - Package named used to detect if installed.
    #           "launch-command": "template",                  - Command to launch the installed program. If N/A, use null.
    #           "install-packages": "template-1,template-2",   - Packages used to install/reinstall the application. Comma separated.
    #           "remove-packages": "template-1,template-2",    - Packages used to be removed for this application. Comma separated.
    #           "description": [
    #             "Template text. Line 1.",                    - Multi-line description, use usual HTML tags for formatting.
    #             "This is still the same line."
    #           ],
    #           "alternate-to": "This Other App",              - If the app is similar or has an alternate. If N/A, use null.
    #           "subcategory": "Partitioning Tools",           - Sub-category of what this app is. Eg. "Partitioning", "Audio Production".
    #           "open-source": true,                           - true/false indicating open source or proprietary.
    #           "url-info": "http://example.com",              - URL to the web page for more information.
    #           "url-android": null,                           - URL if there is an associated Android app. If N/A, use null.
    #           "url-ios": null,                               - URL if there is an associated iOS app. If N/A, use null.
    #           "arch": "i386,amd64,armhf",                    - Supported architectures for this app.
    #           "working": true                                - true/false indicating whether this app works and can be listed.

    #           "upgradable": true,                            - (Upgrade only) Set to true if this app is to be upgraded.
    #           "upgrade-packages": "libreoffice"              - (Upgrade only) Packages to be upgraded.
    #           }
    #       }
    #   }
    # }
    #     ## Important:  Use &#8217; instead of ' for an apostrophe character!
    #

    def reload_index(self):
        try:
            print('[Apps] Reading index...')
            json_path = os.path.abspath(os.path.join(app._data_path, 'js/applications.json'))
            with open(json_path) as data_file:
                self.index = json.load(data_file)
                print('[Apps] Successfully loaded index.')
        except Exception as e:
            self.index = None
            print("[Apps] ERROR: Software Index JSON is invalid or missing!")
            print("------------------------------------------------------------")
            print("Exception:")
            print(str(e))
            print("------------------------------------------------------------")

    def populate_categories(self, webkit):
        ''' List all of the applications supported on the current architecture. '''
        total_added = 0
        total_skipped = 0
        total_unsupported = 0

        # Don't attempt to continue if the index is missing/incorrectly parsed.
        if not self.index:
            print('[Apps] ERROR: Application index not loaded. Cannot populate categories.')
            return

        # Get the app data from each category and list them.
        for category in self.allcategories:
            arg.print_verbose('Apps', ' ------ Processing: ' + category + ' ------')

            # Convert to a list to work with. Sort alphabetically.
            category_items = list(self.index[category].keys())
            category_items.sort()

            # Keep a count of apps in case there are none to list.
            apps_here = 0

            # Enumerate each program in this category.
            for program_id in category_items:
                app_name = self.index[category][program_id]['name']
                app_img = self.index[category][program_id]['img']
                app_main_package = self.index[category][program_id]['main-package']
                try:
                    app_upgradable = self.index[category][program_id]['upgradable']
                except:
                    app_upgradable = False

                if app_upgradable == True:
                    arg.print_verbose('Apps', 'Upgrade: ' + app_name)
                    app_upgrade_packages = self.index[category][program_id]['upgrade-packages']
                else:
                    app_install_packages = self.index[category][program_id]['install-packages']
                    app_remove_packages = self.index[category][program_id]['remove-packages']
                    app_launch_command = self.index[category][program_id]['launch-command']

                app_description = ''
                for line in self.index[category][program_id]['description']:
                    app_description = app_description + ' ' + line

                app_alternate_to = self.index[category][program_id]['alternate-to']
                app_subcategory = self.index[category][program_id]['subcategory']
                app_freedom = self.index[category][program_id]['open-source']
                app_url_info = self.index[category][program_id]['url-info']
                app_url_android = self.index[category][program_id]['url-android']
                app_url_ios = self.index[category][program_id]['url-ios']
                app_arch = self.index[category][program_id]['arch']
                app_listed = self.index[category][program_id]['working']

                # Only list the program if it's working.
                if not app_listed:
                    arg.print_verbose('Apps', ' Unlisted: ' + app_name)
                    total_skipped = total_skipped + 1
                    continue

                # Only list the program if it supports our architecture:
                # i386, x86_64, armhf
                app_supported = False
                for architecture in app_arch.split(','):
                    if architecture == systemstate.arch:
                        app_supported = True

                if not app_supported:
                    arg.print_verbose('Apps', ' Unsupported: ' + app_name + ' (Only: ' + app_arch + ')' )
                    total_unsupported = total_unsupported + 1
                    continue

                # If the app has made it this far, it can be added to the grid.
                arg.print_verbose('Apps', ' Added: ' + app_name)
                html_buffer = ''
                css_class = app_main_package.replace('.','-')

                # "Normal" packages that can be installed/removed by the user.
                if app_freedom:
                    html_buffer = html_buffer + '<div id="' + program_id + '">'
                else:
                    html_buffer = html_buffer + '<div id="' + program_id + '" class="proprietary">'
                html_buffer = html_buffer + '<div class="row-fluid">'
                html_buffer = html_buffer + '<div class="span2 center-inside">'
                html_buffer = html_buffer + '<img src="img/applications/' + app_img + '.png">'
                html_buffer = html_buffer + '</div><div class="span10">'
                html_buffer = html_buffer + '<p><b>' + app_name + '</b></p>'
                html_buffer = html_buffer + '<p>' + app_description + '</p>'

                if not app_alternate_to == None:
                    html_buffer = html_buffer + '<ul><li><b>Alternative to: </b><i>' + app_alternate_to + '</i></li></ul>'
                html_buffer = html_buffer + '<p class="text-right">'
                if not app_url_info == None:
                    html_buffer = html_buffer + '<a class="btn" href="cmd://link?' + app_url_info + '"><span class="fa fa-info"></span></a>&nbsp;'
                if not app_url_android == None:
                    html_buffer = html_buffer + '<a class="btn" href="cmd://link?' + app_url_android + '"><span class="fa fa-android"></span></a>&nbsp;'
                if not app_url_ios == None:
                    html_buffer = html_buffer + '<a class="btn" href="cmd://link?' + app_url_ios + '"><span class="fa fa-apple"></span></a>&nbsp;'

                # "Regular" packages - can be installed or removed with one-click by the user.
                if not app_upgradable:
                    html_buffer = html_buffer + '<a class="' + css_class + '-install btn btn-success" href="cmd://apt-install?' + app_install_packages + '"><span class="fa fa-download"></span>&nbsp; Install</a>&nbsp;'
                    html_buffer = html_buffer + '<a class="' + css_class + '-reinstall btn" href="cmd://apt-install?' + app_install_packages + '"><span class="fa fa-refresh"></span>&nbsp; Reinstall</a>&nbsp;'
                    html_buffer = html_buffer + '<a class="' + css_class + '-remove btn btn-danger" href="cmd://apt-remove?' + app_remove_packages + '"><span class="fa fa-trash"></span>&nbsp; Remove</a>&nbsp;'

                # "Upgradable" packages - usually pre-installed but have a more up-to-date repository.
                if app_upgradable:
                    html_buffer = html_buffer + '<a class="' + css_class + '-upgrade btn btn-warning" href="cmd://apt-upgrade?' + app_upgrade_packages + '"><span class="fa fa-level-up"></span>&nbsp; Upgrade</a>&nbsp;'

                if not app_launch_command == None:
                    html_buffer = html_buffer + '<a class="' + css_class + '-launch btn btn-inverse" href="cmd://launchid?' + program_id + '"><img src="img/applications/' + app_img + '.png" width="20px" height="20px" />&nbsp; Launch</a>&nbsp;'

                html_buffer = html_buffer + '</p><hr class="soften">'
                html_buffer = html_buffer + '</div></div></div>'

                webkit.execute_script('$("#' + category + '").append(\'' + html_buffer + '\')')

                # Keep track of how many apps added.
                apps_here = apps_here + 1
                total_added = total_added + 1

            # Display a message if there is nothing for this category.
            if apps_here == 0:
                webkit.execute_script('$("#' + category + '").append("<p class=\'center\'><span class=\'fa fa-warning\'></span>&nbsp; Sorry, Welcome could not feature any software for this category that is compatible on this system.</p>")')

        # "Stats for nerds"
        total_apps = total_added + total_skipped + total_unsupported
        arg.print_verbose('Apps','------------------')
        arg.print_verbose('Apps','Applications added: ' + str(total_added))
        arg.print_verbose('Apps','Applications unsupported on this architecture: ' + str(total_unsupported))
        arg.print_verbose('Apps','Applications that are broken or not suitable for inclusion: ' + str(total_skipped))
        arg.print_verbose('Apps','Total number of applications: ' + str(total_apps))
        arg.print_verbose('Apps','------------------')

    def populate_featured_apps(self, webkit):
        arg.print_verbose('Apps', '---- Populating Featured Apps Grid ----')
        # Randomly generate a list of apps to feature if supported on this architecture.
        possible_apps = []
        for category in self.allcategories:
            category_items = list(self.index[category].keys())
            for program_id in category_items:
                if systemstate.arch in self.index[category][program_id]['arch']:
                    possible_apps.append(self.index[category][program_id]['img'])

        random.shuffle(possible_apps)
        for no in range(0,17):
            arg.print_verbose('Apps', str(no) + '. ' + possible_apps[no])
            webkit.execute_script("addToGrid('" + possible_apps[no] + "');")
        webkit.execute_script("initGrid();")
        arg.print_verbose('Apps','------------------')


    def update_app_statuses(self, webkit):
        ''' Update the webpage based on whether the application is installed or not. '''
        self._apt_cache = apt.Cache()

        # Don't attempt to continue if the index is missing/incorrectly parsed.
        if not self.index:
            print('[Apps] ERROR: Application index not loaded. Cannot update page.')
            return

        # Get the app data from each category and list them.
        arg.print_verbose('Apps', '---- Checking cache for installed applications ----')
        for category in self.allcategories:

            # Convert to a list to work with.
            category_items = list(self.index[category].keys())

            # Enumerate each program and check if installed.
            for program_id in category_items:
                app_package = self.index[category][program_id]['main-package']
                if systemstate.arch in self.index[category][program_id]['arch']:
                    try:
                        if self._apt_cache[app_package].is_installed:
                            this_installed = True
                            arg.print_verbose('Apps', '   Installed: ' + app_package)
                        else:
                            this_installed = False
                            arg.print_verbose('Apps', ' Not present: ' + app_package)
                    except:
                        this_installed = False
                        arg.print_verbose('Apps', ' Not present: ' + app_package)
                else:
                    continue

                # Replace any dots with dashes, as they are unsupported in CSS.
                css_class = app_package.replace('.','-')

                # Update appearance on this page.
                if this_installed:
                    webkit.execute_script("$('." + css_class + "-launch').show();")
                    webkit.execute_script("$('." + css_class + "-install').hide();")
                    webkit.execute_script("$('." + css_class + "-reinstall').show();")
                    webkit.execute_script("$('." + css_class + "-remove').show();")
                    webkit.execute_script("$('." + css_class + "-upgrade').show();")
                else:
                    webkit.execute_script("$('." + css_class + "-launch').hide();")
                    webkit.execute_script("$('." + css_class + "-install').show();")
                    webkit.execute_script("$('." + css_class + "-reinstall').hide();")
                    webkit.execute_script("$('." + css_class + "-remove').hide();")
                    webkit.execute_script("$('." + css_class + "-upgrade').hide();")
        arg.print_verbose('Apps', '----------------------------------------')

    def get_attribute_for_app(self, appid, attribute):
        ''' Retrieves a specific attribute from a listed application, regardless of category. '''
        for category in self.allcategories:
            category_items = list(self.index[category].keys())
            for program_id in category_items:
                if program_id == appid:
                    return self.index[category][program_id][attribute]

    def launch_app(self, appid):
        ''' Launch an application directly from Welcome '''
        program_name = self.get_attribute_for_app(appid, 'name')
        program_command = self.get_attribute_for_app(appid, 'launch-command')
        print('[Apps] Launched "' + program_name + '" (Command: "' + program_command + '").')
        try:
            subprocess.Popen(program_command.split(' '))
        except:
            print('[Apps] Failed to launch command: ' + program_command)


class Arguments(object):
    # Check arguments for:
    #   --verbose -v                Be more verbose in output.
    #   --simulate-arch=<ARCH>      Simulate another architecture ('i386', 'amd64', 'armhf')
    #   --simulate-session=<TYPE>   Simulate a session ('guest', 'live', 'pi')
    #   --software-only             Open the software page directly (Hides social links, uses a larger window)

    def __init__(self):
        self.verbose_enabled = False
        self.simulate_arch = None
        self.simulate_session = None
        self.simulate_no_connection = False
        self.jump_software_page = False

        for arg in sys.argv:
          if arg == '--help':
              print('\nUbuntu MATE Welcome Parameters\n  Intended for debugging and testing purposes only!\n')
              print('\nUsage: ubuntu-mate-welcome [arguments]')
              print('  --verbose                   Show more details.')
              print('  --simulate-arch=<ARCH>      Simulate a specific architecture.')
              print('                                 "i386", "amd64" or "armhf" or "powerpc"')
              print('  --simulate-session=<TYPE>   Simulate a specific architecture.')
              print('                                 "guest", "live" or "pi"')
              print('  --simulate-no-net           Simulate no internet connection.')
              print('  --software-only             Open Welcome only for the software selections.')
              print('')
              exit()

          if arg == '--verbose':
              print('[Debug] Verbose mode enabled.')
              self.verbose_enabled = True

          if arg.startswith('--simulate-arch'):
              try:
                  self.simulate_arch = arg.split('--simulate-arch=')[1]
                  if not self.simulate_arch == 'i386' and not self.simulate_arch == 'amd64' and not self.simulate_arch == 'armhf' and not self.simulate_arch == 'powerpc':
                      print('[Debug] Unrecognised architecture: ' + self.simulate_arch)
                      exit()
                  else:
                      print('[Debug] Simulating architecture: ' + self.simulate_arch)
              except:
                  print('[Debug] Invalid arguments for "--simulate-arch"')
                  exit()


          if arg.startswith('--simulate-session'):
              try:
                  self.simulate_session = arg.split('--simulate-session=')[1]
                  if not self.simulate_session == 'guest' and not self.simulate_session == 'live' and not self.simulate_session == 'pi':
                      print('[Debug] Unrecognised session type: ' + self.simulate_session)
                      exit()
                  else:
                      print('[Debug] Simulating session: ' + self.simulate_session)
              except:
                  print('[Debug] Invalid arguments for "--simulate-session"')
                  exit()

          if arg == '--simulate-no-net':
              print('[Debug] Simulating the application without an internet connection.')
              self.simulate_no_connection = True

          if arg == '--software-only':
              print('[Welcome] Starting in software selections only mode.')
              self.jump_software_page = True


    def print_verbose(self, feature, text):
        if self.verbose_enabled:
            print('[' + feature + '] ' + text)

    def override_arch(self):
        if not self.simulate_arch == None:
            systemstate.arch = self.simulate_arch

    def override_session(self):
        if not self.simulate_session == None:
            systemstate.session_type = self.simulate_session


if __name__ == "__main__":
    # Process any parameters.
    arg = Arguments()

    # Application Initialization
    set_proc_title()
    systemstate = SystemState()
    app = WelcomeApp()
    dynamicapps = DynamicApps()

    # Argument Overrides
    arg.override_arch()
    arg.override_session()

    print('[Welcome] Application Started.')
    app.run()
